{
  "name": "nano-errors",
  "version": "1.3.1",
  "description": "A minimalistic error framework for TS",
  "author": "Luis Brito <luis@nxtep.io>",
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nxtep-io/nano-errors.git"
  },
  "scripts": {
    "build": "yarn run -s clean && tsc",
    "clean": "rimraf ./dist",
    "test": "jest --config jest.json",
    "docs": "./scripts/docs.sh",
    "lint": "tslint --config tslint.json --project ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "{api,config,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@sentry/integrations": "^5.11.0",
    "triple-beam": "^1.3.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@sentry/types": "^5.15.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^13.1.6",
    "@types/triple-beam": "^1.3.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.12.1",
    "nxtep-typedoc-theme": "nxtep-io/nxtep-typedoc-theme",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.3",
    "ts-jest": "^23.1.2",
    "ts-node": "^8.6.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-no-circular-imports": "^0.5.0",
    "typedoc": "^0.16.8",
    "typescript": "^3.7.4"
  },
  "optionalDependencies": {
    "@sentry/browser": "^5.15.0",
    "@sentry/electron": "^1.3.0",
    "@sentry/node": "^5.15.0",
    "@sentry/react-native": "^1.3.3",
    "clean-stack": "^2.2.0"
  }
}
